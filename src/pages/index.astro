---
/**
 * STL Festival - Landing Page
 * Página principal com todas as seções do festival
 */

import BaseLayout from '../layouts/BaseLayout.astro'
import Preloader from '../components/Preloader.tsx'
import Hero from '../components/sections/Hero.astro'
import About from '../components/sections/About.astro'

// URL do video Cloudinary
const videoUrl =
  import.meta.env.CLOUDINARY_VIDEO_URL ||
  'https://res.cloudinary.com/dazkdemvu/video/upload/v1768415565/stl-festival/videos/hero.mp4'
---

<BaseLayout>
  <!-- Preloader com cortinas (z-index alto) -->
  <Preloader
    client:load
    logoSrc="/logo/logo-stl.svg"
    phraseTop="Um mundo de vibes"
    phraseBottom="Conexão, música, natureza e sustentabilidade"
  />

  <!-- Hero com video (atrás do preloader) -->
  <Hero videoUrl={videoUrl} />

  <!-- About Section -->
  <About />

  <section id="lineup" class="bg-neutral-cream min-h-screen py-20">
    <div class="container-responsive text-center">
      <h2 class="font-display text-primary-indigo mb-4">Line-up</h2>
      <p class="text-secondary-green">Em breve...</p>
    </div>
  </section>

  <section id="ingressos" class="bg-primary-indigo min-h-screen py-20">
    <div class="container-responsive text-center">
      <h2 class="font-display mb-4 text-white">Ingressos</h2>
      <p class="text-white/80">Em breve...</p>
    </div>
  </section>

  <section id="playlist" class="bg-neutral-cream min-h-screen py-20">
    <div class="container-responsive text-center">
      <h2 class="font-display text-primary-indigo mb-4">Playlist Oficial</h2>
      <p class="text-secondary-green">Em breve...</p>
    </div>
  </section>
</BaseLayout>
